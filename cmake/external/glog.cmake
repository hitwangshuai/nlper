include(ExternalProject)
set(GLOG_SOURCES_DIR ${THIRD_PARTY_PATH}/glog)
set(GLOG_INSTALL_DIR    ${THIRD_PARTY_PATH})
ExternalProject_Add(
    extern_glog
    ${EXTERNAL_PROJECT_LOG_ARGS}
    DOWNLOAD_DIR          ${GLOG_SOURCES_DIR}
    DOWNLOAD_COMMAND      cd ${GLOG_SOURCES_DIR} && tar zxvf glog_0_3_5.tar.gz && cd ./glog
    DOWNLOAD_NO_PROGRESS  1
    PREFIX          ${GLOG_SOURCES_DIR}
    UPDATE_COMMAND  ""
    BUILD_COMMAND   cd ${GLOG_SOURCES_DIR}/glog && cmake -DCMAKE_POSITION_INDEPENDENT_CODE=ON -DBUILD_SHARED_LIBS=ON -DBUILD_STATIC_LIBS=ON -DWITH_GFLAGS=OFF -DCMAKE_INSTALL_PREFIX=${GLOG_INSTALL_DIR} ./ && make -j8
    CONFIGURE_COMMAND ""
    INSTALL_COMMAND cd ${GLOG_SOURCES_DIR}/glog && make install
    BUILD_IN_SOURCE      1
)
